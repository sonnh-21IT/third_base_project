<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                               
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/activity_search_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".activities.SearchActivity">
        <androidx.cardview.widget.CardView
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/main_color">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10">
                <ImageView
                    android:id="@+id/btn_back"
                    android:src="@drawable/ic_backspace"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/_5sdp"/>
                <EditText
                    android:inputType="text|textCapSentences|textNoSuggestions"
                    android:drawableTint="@android:color/darker_gray"
                    android:id="@+id/search"
                    android:textSize="@dimen/_14ssp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/background_btncheckout"
                    android:layout_width="0dp"
                    android:imeOptions="actionSearch"
                    android:hint="search..."
                    android:textColorHint="@android:color/darker_gray"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_weight="9"
                    android:padding="@dimen/_5sdp"
                    android:focusableInTouchMode="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/actionbar"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/search_on_failed"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/ic_search_off"
                android:backgroundTint="@android:color/darker_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Hix.There are no products that match your search!"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---  or  ---"
                android:textAlignment="center"
                android:paddingVertical="@dimen/_5sdp"
                android:textColor="@android:color/darker_gray" />
            <TextView
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Remove the finder"
                android:textColor="@color/white"
                android:padding="@dimen/_5ssp"
                android:background="@drawable/back_pay"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
         