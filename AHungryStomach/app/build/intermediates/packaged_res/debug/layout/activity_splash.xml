<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                              
                                               
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_image" android:tag="layout/activity_splash_0" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:context=".activities.SplashActivity">
        <ImageView
            android:id="@+id/background_image"
            android:layout_width="262dp"
            android:layout_height="262dp"
            android:src="@drawable/splash_screen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="A Hungry Stomach"/>


        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="@dimen/_125sdp"
            android:background="@drawable/logo_hs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@drawable/bachground_tv"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:id="@+id/tvgetting"
            android:text="Get started"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:fontFamily="@font/myfont"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
         