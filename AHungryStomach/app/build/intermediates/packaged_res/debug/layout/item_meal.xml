<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                 
                           
                                                             
           

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:tag="layout/item_meal_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_170sdp"
            android:background="@drawable/back_item_meal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@drawable/back_tv_meal"
                android:layout_marginHorizontal="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/img">

                <TextView
                    android:id="@+id/tv_namemeal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:tag="binding_1"           
                    android:textSize="@dimen/_16ssp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:padding="@dimen/_5sdp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_image"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         